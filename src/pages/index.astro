---
import Layout from "@layouts/Default.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import HeroMain from "@components/hero/HeroMain.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Container from "@components/section/Container.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import IconBlock from "@components/content/IconBlock.astro";
import Toolbar from "@components/content/doctors/grid/Toolbar.astro";
import Filters from "@components/content/doctors/grid/Filters.astro";
import Grid from "@components/content/doctors/grid/Grid.astro";
import SideStatsRight from "@components/content/features/SideStatsRight.astro";
import SideStatsLeft from "@components/content/features/SideStatsLeft.astro";
import Pricing from "@components/content/Pricing.astro";
import Cta from "@components/content/Cta.astro";
import Testimonials from "@components/content/Testimonials.astro";
---

<Layout title="Home">
  <HeroMain />

  <SectionMuted>
    <Container>
      <SectionTitle
        title="Brindamos servicios de salud "
        subtitle="especializados de mediana y alta complejidad a niños, niñas, adolescentes y población en general, con un enfoque centrado en el usuario y su familia. Contamos con un equipo humano competente y comprometido con la calidad, seguridad, eficiencia y humanización, promoviendo la prevención, el desarrollo sostenible y la mejora continua de la calidad de vida."
        minititle="Misión"
      />

      <div id="servicios" class="grid md:grid-cols-3 ltablet:grid-cols-4 lg:grid-cols-4 gap-x-6 gap-y-12" x-intersect="activeStep = ''">
        <!-- Medicina General -->
        <div>
          <IconBlock
            title="Medicina General"
            text="Atención integral para prevenir, diagnosticar y tratar enfermedades frecuentes en todas las etapas de la vida."
            icon="ph:stethoscope-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Enfermería -->
        <div>
          <IconBlock
            title="Enfermería"
            text="Cuidados básicos y especializados, apoyo terapéutico y promoción de la salud con enfoque humano."
            icon="ph:heart-duotone"
            class="'text-rose-500'"
          />
        </div>
      
        <!-- Nutrición y Dieta -->
        <div>
          <IconBlock
            title="Nutrición y Dieta"
            text="Asesoría nutricional para mejorar hábitos alimentarios y apoyar el tratamiento de condiciones clínicas."
            icon="ph:apple-logo-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Psicología -->
        <div>
          <IconBlock
            title="Psicología"
            text="Evaluación emocional y tratamiento de trastornos mentales con enfoque terapéutico y preventivo."
            icon="ph:brain-duotone"
            class="'text-rose-500'"
          />
        </div>
      
        <!-- Odontología -->
        <div>
          <IconBlock
            title="Odontología"
            text="Prevención, diagnóstico y tratamiento de enfermedades bucales en pacientes de todas las edades."
            icon="ph:tooth-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Pediatría -->
        <div>
          <IconBlock
            title="Pediatría"
            text="Atención especializada para niños y adolescentes, con enfoque en crecimiento y desarrollo saludable."
            icon="ph:baby-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Medicina Familiar -->
        <div>
          <IconBlock
            title="Medicina Familiar"
            text="Cuidado continuo e integral centrado en la persona y su entorno familiar, desde la prevención hasta el tratamiento."
            icon="ph:house-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Medicina Interna -->
        <div>
          <IconBlock
            title="Medicina Interna"
            text="Diagnóstico y manejo de enfermedades complejas en adultos, con enfoque clínico especializado."
            icon="ph:clipboard-text-duotone"
            class="'text-rose-500'"
          />
        </div>
      
        <!-- Medicina Laboral -->
        <div>
          <IconBlock
            title="Medicina Laboral"
            text="Promoción de la salud ocupacional, prevención de riesgos y seguimiento de condiciones laborales."
            icon="ph:clipboard-text-duotone"
            class="'text-primary-600'"
          />
        </div>
      
        <!-- Ginecobstetricia -->
        <div>
          <IconBlock
            title="Ginecobstetricia"
            text="Salud femenina integral, desde la adolescencia hasta la menopausia, con atención en embarazo y parto."
            icon="ph:gender-female-duotone"
            class="'text-rose-500'"
          />
        </div>
      
        <!-- Laboratorio Clínico -->
        <div>
          <IconBlock
            title="Laboratorio Clínico"
            text="Análisis confiables que apoyan el diagnóstico médico, con equipos modernos y personal capacitado."
            icon="ph:test-tube-duotone"
            class="'text-primary-600'"
          />
        </div>
      </div>
      

    </Container>
  </SectionMuted>

  <SectionMuted class="'border-b border-muted-200 dark:border-muted-800'">
    <Container>
      <SectionTitle
        title="De contar con los mejores profesionales"
        minititle="Ten la seguridad"
        class="'mx-auto text-center'"
      />

      <div id="doctors" x-data="doctors()"  x-intersect="activeStep = 'spy-1'">

        <!--Grid wrapper-->
        <div class="py-10">
            <!--Content-->
            <div class="col-span-12 lg:col-span-9">
              <!--Subgrid-->
              <Grid />
          </div>
        </div>
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted class="'overflow-hidden'">
    <Container>
      <div class="py-10">
        <SideStatsRight />
        <SideStatsLeft />
      </div>
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <SectionTitle
        title="En Pediatric Health and Care creemos..."
        minititle="Algunos de nuestros valores"
        class="'mx-auto text-center'"
      />
      <Testimonials />
    </Container>
  </SectionMuted>

  <SectionMuted>
    <Container>
      <Cta />
    </Container>
  </SectionMuted>
</Layout>
